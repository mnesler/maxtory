{
  "name": "attractor-monorepo",
  "private": true,
  "workspaces": ["backend", "frontend", "mtg", "mtg/frontend"],
  "scripts": {
    "dev": "npm run dev --workspace=backend & npm run dev --workspace=frontend",
    "build": "npm run build --workspace=backend && npm run build --workspace=frontend && npm run build --workspace=mtg",
    "test": "npm run test --workspace=backend && npm run test --workspace=frontend && npm run test --workspace=mtg",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:mtg": "npm run test --workspace=mtg",
    "ingest:scryfall": "npm run ingest:scryfall --workspace=mtg",
    "ingest:spellbook": "npm run ingest:spellbook --workspace=mtg",
    "embed:cards": "npm run embed:cards --workspace=mtg",
    "assistant": "npm run assistant --workspace=mtg",
    "assistant:serve": "npm run assistant:serve --workspace=mtg",
    "mtg:ui": "npm run dev --workspace=mtg-deck-advisor",
    "mtg:ui:build": "npm run build --workspace=mtg-deck-advisor"
  }
}
